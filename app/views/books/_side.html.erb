<div class = "col-md-3">
  <h2>User info</h2>
  <p><%= image_tag user.get_profile_image(100,100) %></p>
  <table class = "table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <t><%= user.introduction %></t>
      </tr>
    </tbody>
  </table>

  <div class ="row">

  </div>

  <h2>New book</h2>
  <%= form_with model: book do |f| %>
    <%= f.label :title, 'Title' %><br />
    <%= f.text_field :title, autofocus: true %><br />

    <%= f.label :body, 'Opinion' %><br />
    <%= f.text_area :body, autofocus: true %><br />

    <%= f.submit "Create Book" %>

  <% end %>
</div>